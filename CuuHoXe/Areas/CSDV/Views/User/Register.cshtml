@{
	ViewBag.Title = "Đăng kí tài khoản";
	Layout = null;
}

@model CuuHoXe.Areas.CSDV.Models.LoginModels

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Đăng kí tài khoản</title>

	<!-- ========== COMMON STYLES ========== -->
	<link rel="stylesheet" href="~/Assets/css/bootstrap.min.css" media="screen">
	<link rel="stylesheet" href="~/Assets/css/font-awesome.min.css" media="screen">
	<link rel="stylesheet" href="~/Assets/css/animate-css/animate.min.css" media="screen">

	<!-- ========== PAGE STYLES ========== -->
	<link rel="stylesheet" href="~/Assets/css/icheck/skins/flat/blue.css">

	<!-- ========== THEME CSS ========== -->
	<link rel="stylesheet" href="~/Assets/css/main.css" media="screen">

	<!-- ========== MODERNIZR ========== -->
	<script src="~/Assets/js/modernizr/modernizr.min.js"></script>
</head>
<body class="">
	<div class="main-wrapper">

		<div class="login-bg-color bg-gray">
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<div class="panel login-box">
						<div class="panel-heading">
							<div class="panel-title text-center">
								<h4>ĐĂNG KÍ TÀI KHOẢN</h4>
							</div>
						</div>
						<div class="panel-body p-20">
							@using (Html.BeginForm("Register", "User", FormMethod.Post))
							{
								@Html.AntiForgeryToken()

								<div class="form-group has-feedback">
									@Html.LabelFor(m => m.HoTen)
									@Html.TextBoxFor(m => m.HoTen, "", new { @class = "form-control", @placeholder = "Nhập vào họ và tên" })
									@*<input type="text" class="form-control" id="name3" placeholder="Nhập vào họ và tên">*@
									<span class="glyphicon glyphicon-user form-control-feedback"></span>
									@Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "badge badge-danger" })
								</div>
								<div class="form-group has-feedback">
									@Html.LabelFor(m => m.NgaySinh)
									@Html.TextBoxFor(m => m.NgaySinh, "", new { @type = "date", @class = "form-control" })
									@Html.ValidationMessageFor(m => m.NgaySinh, "", new { @class = "badge badge-danger" })
								</div>
								<div class="form-group has-feedback">
									@Html.LabelFor(m => m.Email)
									@Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Nhập vào địa chỉ email" })
									@Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
									<span class="fa fa-envelope-o form-control-feedback"></span>
								</div>
								<div class="form-group has-feedback">
									@Html.LabelFor(m => m.SoDienThoai)
									@Html.TextBoxFor(m => m.SoDienThoai, "", new { @class = "form-control", @placeholder = "Nhập vào Số điện thoại" })
									@Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "badge badge-danger" })
									<span class="fa fa-phone form-control-feedback"></span>
								</div>
								<div class="form-group has-feedback">
									@Html.LabelFor(m => m.TenTK)
									@Html.TextBoxFor(m => m.TenTK, "", new { @class = "form-control", @placeholder = "Nhập vào tên đăng nhập" })
									@Html.ValidationMessageFor(m => m.TenTK, "", new { @class = "badge badge-danger" })
									<span class="glyphicon glyphicon-user form-control-feedback"></span>
								</div>
								<div class="form-group has-feedback">
									@Html.LabelFor(m => m.MatKhau)
									@Html.TextBoxFor(m => m.MatKhau, "", new { @type = "password", @class = "form-control", @placeholder = "Nhập vào mật khẩu" })
									@Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "badge badge-danger" })
									<span class="fa fa-key form-control-feedback"></span>
								</div>
								<div class="form-group has-feedback">
									@Html.LabelFor(m => m.MatKhauXN)
									@Html.TextBoxFor(m => m.MatKhauXN, "", new { @type = "password", @class = "form-control", @placeholder = "Nhập lại mật khẩu" })
									@Html.ValidationMessageFor(m => m.MatKhauXN, "", new { @class = "badge badge-danger" })
									<span class="fa fa-key form-control-feedback"></span>
									<div class="registrationFormAlert" style="color:green;" id="CheckPasswordMatch"></div>
								</div>
								<div class="checkbox">
									<label>
										<input type="checkbox" data-validation="required" class="error" style="border-color: rgb(185, 74, 72);" data-validation-current-error="This is a required field" data-validation-has-keyup-event="true"> Tôi đồng ý với <a href="#" class="color-primary">chính sách &amp; điều khoản</a>
									</label>
								</div>
								<div class="form-group mt-20">
									<div class="">
										<a href="/dangnhap" class="form-link"><small class="muted-text">Đã có tài khoản?Đăng nhập ngay</small></a>
										<button type="submit" class="btn btn-success btn-labeled pull-right">Đăng kí tài khoản<span class="btn-label btn-label-right"><i class="fa fa-check"></i></span></button>
										<div class="clearfix"></div>
									</div>
								</div>
							}
							@Html.Partial("_Notifications")
							<hr>
						</div>
					</div>
					<!-- /.panel -->
					<p class="text-muted text-center"><small>Nguyen Thanh Dat © 1811505310107</small></p>
				</div>
				<!-- /.col-md-6 col-md-offset-3 -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /. -->

	</div>
	<!-- /.main-wrapper -->
	<!-- ========== COMMON JS FILES ========== -->
	<script src="~/Assets/js/jquery/jquery-2.2.4.min.js"></script>
	<script src="~/Assets/js/jquery-ui/jquery-ui.min.js"></script>
	<script src="~/Assets/js/bootstrap/bootstrap.min.js"></script>
	<script src="~/Assets/js/pace/pace.min.js"></script>
	<script src="~/Assets/js/lobipanel/lobipanel.min.js"></script>
	<script src="~/Assets/js/iscroll/iscroll.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment-with-locales.min.js" integrity="sha512-LGXaggshOkD/at6PFNcp2V2unf9LzFq6LE+sChH7ceMTDP0g2kn6Vxwgg7wkPP7AAtX+lmPqPdxB47A0Nz0cMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<!-- ========== PAGE JS FILES ========== -->
	<script src="~/Assets/js/icheck/icheck.min.js"></script>

	<!-- ========== THEME JS ========== -->
	<script src="~/Assets/js/main.js"></script>
	<script>
		$(function () {
			$('input.flat-blue-style').iCheck({
				checkboxClass: 'icheckbox_flat-blue'
			});
		});

		$("#NgaySinh").val(moment(new Date()).format("YYYY/MM/DD"));

		function checkPasswordMatch() {
			var matkhau = $("#MatKhau").val();
			var matkhauXN = $("#MatKhauXN").val();
			if (matkhau != matkhauXN) {
				$("#CheckPasswordMatch").html("Mật khẩu không trùng!");
				$('#CheckPasswordMatch').css("color","red", $(this).val());
			}
			else {
				$("#CheckPasswordMatch").html("Mật khẩu khớp");
				$('#CheckPasswordMatch').css("color","green", $(this).val());
			}
		}
		$(document).ready(function () {
			$("#MatKhauXN").keyup(checkPasswordMatch);
		});
	</script>
</body>
</html>
